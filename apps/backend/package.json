{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "scripts": {
	"dev": "bun run index.ts serve --port 3001",
    "generate": "bun run index.ts generate --model \"anthropic/claude-haiku-4.5\" --difficulty easy --language javascript --tests 5 --samples 2",
    "solve": "bun run index.ts solve --problem <PROBLEM_ID> --solution problem/solution.js --language javascript",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "lint:fix": "eslint . --ext .ts,.tsx,.js --fix",
    "fmt": "bun run format",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/db/seed.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "ai": "^5.0.95",
    "commander": "^14.0.2",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  }
}
